{
  "manifest_version": 3,
  "name": "Callosum",
  "version": "0.1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "callosum@example.local",
      "strict_min_version": "109.0"
    }
  },
  "description": "A privacy-focused AI assistant powered by local Ollama LLM",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:11434/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Callosum",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "96": "icons/96.png"
    }
  },
  "sidebar_action": {
    "default_title": "Callosum",
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    },
    "default_width": 400
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
